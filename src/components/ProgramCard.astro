---
// src/components/ProgramCard.astro
import { ArrowRight } from 'lucide-react';

interface Props {
  title: string;
  description: string;
  href: string;
  image?: string;
  delay?: number;
}

const { title, description, href, image, delay = 0 } = Astro.props;
---

<a 
  href={href}
  class="group relative bg-white/5 backdrop-blur-sm rounded-2xl overflow-hidden border border-white/10 hover:border-pelican-coral/50 transition-all duration-500 flex flex-col h-full hover:shadow-[0_0_30px_rgba(255,111,97,0.1)] hover:-translate-y-2"
  data-aos="fade-up"
  data-aos-delay={delay}
>
  <!-- Image/Pattern Header -->
  <div class="h-48 relative overflow-hidden">
    {image ? (
      <img src={image} alt={title} class="w-full h-full object-cover opacity-70 group-hover:opacity-100 group-hover:scale-110 transition-all duration-700" />
    ) : (
      <div class="absolute inset-0 bg-gradient-to-br from-gray-800 to-black"></div>
    )}
    <div class="absolute inset-0 bg-aviation-deep/50 group-hover:bg-transparent transition-all duration-500"></div>
  </div>

  <!-- Content -->
  <div class="p-8 flex flex-col flex-grow relative z-10">
    <h3 class="font-heading text-2xl text-white mb-3 group-hover:text-pelican-coral transition-colors">{title}</h3>
    <p class="font-body text-slate-300 mb-6 flex-grow leading-relaxed group-hover:text-white transition-colors duration-300">
      {description}
    </p>
    
    <div class="inline-flex items-center text-silver-400 text-sm font-semibold tracking-wide group-hover:text-white transition-colors">
      View Details <ArrowRight className="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform" />
    </div>
  </div>
</a>