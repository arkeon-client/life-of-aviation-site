---
import '../styles/global.css';
import Sidebar from '../components/dashboard/Sidebar';
import DashboardHeader from '../components/dashboard/DashboardHeader';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Mission Control | Life of Aviation</title>
  </head>
  <body class="bg-[#020617] text-slate-200 antialiased flex h-screen overflow-hidden">
    
    <!-- AUTH CHECK SCRIPT -->
    <script>
      import { supabase } from '../lib/supabaseClient';
      
      async function checkAuth() {
        // 1. Get current session
        const { data: { session } } = await supabase.auth.getSession();
        
        // 2. If no session, wait for a moment (auth state change) or redirect
        if (!session) {
           // Double check via onAuthStateChange for initial load race conditions
           supabase.auth.onAuthStateChange((event, session) => {
             if (!session && event !== 'INITIAL_SESSION') {
               window.location.href = '/signin';
             }
           });
           
           // If still nothing after slight delay, redirect
           setTimeout(async () => {
             const { data } = await supabase.auth.getSession();
             if (!data.session) window.location.href = '/signin';
           }, 1000);
        }
      }
      checkAuth();
    </script>

    <!-- Sidebar (Desktop & Mobile) -->
    <Sidebar client:load />

    <!-- Main Content Area -->
    <div class="flex-1 flex flex-col min-w-0 overflow-hidden relative">
      <div class="absolute inset-0 bg-gradient-to-br from-pelican-coral/5 to-blue-600/5 pointer-events-none"></div>
      
      <DashboardHeader client:load />

      <main class="flex-1 overflow-y-auto p-4 md:p-8 relative z-10 scroll-smooth">
        <slot />
      </main>
    </div>

  </body>
</html>