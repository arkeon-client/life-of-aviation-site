---
// src/pages/dashboard/course/[courseId].astro
import DashboardLayout from '../../../layouts/DashboardLayout.astro';
import CourseView from '../../../components/dashboard/CourseView';

const { courseId } = Astro.params;

// If URL parameter is missing, redirect
if (!courseId) {
  return Astro.redirect('/dashboard/courses');
}
---

<DashboardLayout>
  <!-- Load the React component on the client -->
  <CourseView client:only="react" courseId={courseId} />
</DashboardLayout>