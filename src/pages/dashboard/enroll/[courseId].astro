---
// src/pages/dashboard/enroll/[courseId].astro
import DashboardLayout from '../../../layouts/DashboardLayout.astro';
import EnrollmentProcessor from '../../../components/dashboard/EnrollmentProcessor';

const { courseId } = Astro.params;

if (!courseId) {
  return Astro.redirect('/dashboard/courses');
}
---

<DashboardLayout>
  <EnrollmentProcessor client:only="react" courseId={courseId} />
</DashboardLayout>