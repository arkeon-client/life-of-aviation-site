---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import { User, Mail, Shield, LogOut } from 'lucide-react';
---

<DashboardLayout>
  
  <div class="max-w-2xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-heading text-white">Pilot Profile</h1>
      <p class="text-slate-400 mt-2">Manage your account settings.</p>
    </div>

    <!-- Profile Card -->
    <div class="bg-white/5 border border-white/10 rounded-2xl p-8 mb-8 backdrop-blur-md relative overflow-hidden">
      <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-pelican-coral to-transparent opacity-50"></div>
      
      <!-- User Info Fetcher (Client Side) -->
      <div id="profile-container" class="animate-pulse">
        <div class="h-20 w-20 bg-white/10 rounded-full mb-4"></div>
        <div class="h-8 w-48 bg-white/10 rounded mb-2"></div>
        <div class="h-4 w-32 bg-white/10 rounded"></div>
      </div>

      <!-- Actual Content (Hidden until loaded) -->
      <div id="profile-content" class="hidden">
        <div class="flex items-center gap-6 mb-8">
           <div class="w-20 h-20 bg-gradient-to-br from-pelican-coral to-purple-600 rounded-full flex items-center justify-center text-white text-3xl font-heading shadow-xl border-4 border-[#020617]" id="user-avatar">
              <!-- Initials JS injected -->
           </div>
           <div>
             <h2 class="text-2xl text-white font-bold" id="user-name">Loading...</h2>
             <p class="text-slate-400 text-sm flex items-center gap-2" id="user-email">
               <Mail size={12} /> loading...
             </p>
           </div>
        </div>

        <div class="space-y-4">
           <div class="p-4 bg-[#020617]/50 rounded-lg border border-white/5 flex items-center justify-between">
              <div class="flex items-center gap-3 text-slate-300">
                <Shield size={18} />
                <span class="text-sm">Account Status</span>
              </div>
              <span class="text-xs font-bold bg-green-500/20 text-green-400 px-2 py-1 rounded border border-green-500/20">Active Cadet</span>
           </div>
        </div>
      </div>

    </div>

    <!-- Actions -->
    <button 
      id="logout-btn"
      class="w-full py-4 bg-red-500/10 border border-red-500/20 text-red-400 font-bold rounded-xl hover:bg-red-500 hover:text-white transition-all flex items-center justify-center gap-2"
    >
      <LogOut size={18} /> Sign Out
    </button>

  </div>

  <script>
    import { supabase } from '../../lib/supabaseClient';

    const container = document.getElementById('profile-container');
    const content = document.getElementById('profile-content');
    const nameEl = document.getElementById('user-name');
    const emailEl = document.getElementById('user-email');
    const avatarEl = document.getElementById('user-avatar');
    const logoutBtn = document.getElementById('logout-btn');

    async function loadProfile() {
      const { data: { user } } = await supabase.auth.getUser();
      
      if (user) {
        const name = user.user_metadata?.full_name || 'Pilot';
        const email = user.email;
        
        // Update UI
        nameEl.textContent = name;
        emailEl.innerHTML = `<svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg> ${email}`;
        avatarEl.textContent = name.charAt(0).toUpperCase();

        // Switch skeletons
        container.classList.add('hidden');
        content.classList.remove('hidden');
      }
    }

    logoutBtn.addEventListener('click', async () => {
      await supabase.auth.signOut();
      window.location.href = '/signin';
    });

    loadProfile();
  </script>

</DashboardLayout>