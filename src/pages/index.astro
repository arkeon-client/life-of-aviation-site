---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import PelicanIcon from '../components/PelicanIcon';
import SpotlightCard from '../components/ui/SpotlightCard';
import AuroraBackground from '../components/ui/AuroraBackground.astro';
import { Lightbulb, Compass, Shield, Award, Briefcase, Camera, Video } from 'lucide-react';

const values = [
  { title: "Creativity", icon: Lightbulb, desc: "Thinking outside the cockpit to solve complex problems." },
  { title: "Curiosity", icon: Compass, desc: "The fuel that drives every great aviator forward." },
  { title: "Reliability", icon: Shield, desc: "Building trust through consistency and safety." },
  { title: "Professionalism", icon: Award, desc: "Upholding the highest standards in every action." },
];
---

<BaseLayout title="Home">
  
  <Hero />

  <!-- Intro Section with Aurora -->
  <section class="relative py-32 border-t border-white/5 overflow-hidden">
    <AuroraBackground />
    
    <div class="max-w-4xl mx-auto px-4 text-center relative z-10">
      <h2 class="font-heading text-4xl md:text-5xl text-white mb-8 drop-shadow-lg" data-aos="fade-up">
        Turning Curiosity into <span class="text-pelican-coral">Discipline</span>
      </h2>
      
      <p class="text-xl md:text-2xl font-light leading-relaxed mb-8 text-slate-300" data-aos="fade-up" data-aos-delay="100">
        Ethiopia’s first independent aviation tutoring initiative. We turn curiosity into discipline and dreams into careers. Whether you are taking your first steps or refining your professional path, we are here to guide you.
      </p>
    </div>
  </section>

  <!-- Core Values Block -->
  <section class="py-24 bg-[#020617] relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-16">
        <h2 class="font-heading text-3xl text-white">Our Core Values</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {values.map((item, index) => (
          <div data-aos="fade-up" data-aos-delay={index * 100}>
            <SpotlightCard client:visible>
              <div class="text-pelican-coral mb-6">
                <item.icon size={40} strokeWidth={1.5} />
              </div>
              <h3 class="font-heading text-2xl text-white mb-4">{item.title}</h3>
              <p class="text-slate-400 text-sm leading-relaxed">
                {item.desc}
              </p>
            </SpotlightCard>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- NEW SECTION: Industry Services (B2B) -->
  <section class="py-24 bg-white/5 border-y border-white/10 relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        
        <div data-aos="fade-right">
          <span class="text-blue-400 font-bold tracking-widest uppercase text-sm mb-4 block">For Aviation Companies</span>
          <h2 class="font-heading text-4xl md:text-5xl text-white mb-6">Partner with Excellence</h2>
          <p class="text-slate-300 text-lg mb-8 leading-relaxed">
            We offer documentary-style storytelling, promotional video production, and sponsorship opportunities for airlines, airports, and training centers.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/services" class="inline-flex items-center justify-center px-8 py-4 bg-white text-[#020617] font-bold rounded-xl hover:bg-pelican-coral hover:text-white transition-all">
              Explore Services
            </a>
            <a href="/contact" class="inline-flex items-center justify-center px-8 py-4 border border-white/20 text-white font-bold rounded-xl hover:bg-white/10 transition-all">
              Become a Sponsor
            </a>
          </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6" data-aos="fade-left">
          <div class="bg-[#020617]/80 p-6 rounded-2xl border border-white/10">
            <Camera size={32} class="text-pelican-coral mb-4" />
            <h3 class="text-white font-bold text-lg mb-2">Company Features</h3>
            <p class="text-slate-400 text-sm">Cinematic showcases of your operations and culture.</p>
          </div>
          <div class="bg-[#020617]/80 p-6 rounded-2xl border border-white/10 mt-0 sm:mt-8">
            <Video size={32} class="text-blue-400 mb-4" />
            <h3 class="text-white font-bold text-lg mb-2">Content Creation</h3>
            <p class="text-slate-400 text-sm">Educational videos for your products and services.</p>
          </div>
          <div class="bg-[#020617]/80 p-6 rounded-2xl border border-white/10">
            <Briefcase size={32} class="text-green-400 mb-4" />
            <h3 class="text-white font-bold text-lg mb-2">Recruitment</h3>
            <p class="text-slate-400 text-sm">Attract the next generation of aviation talent.</p>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- The Pelican Teaser -->
  <section class="py-32 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-[#020617] to-slate-900/50"></div>
    
    <div class="max-w-6xl mx-auto px-4 relative z-10 flex flex-col md:flex-row items-center gap-16">
      <div class="md:w-1/2" data-aos="fade-right">
        <span class="text-pelican-coral font-bold tracking-[0.2em] uppercase text-sm mb-4 block glow-text">The Symbol</span>
        <h2 class="font-heading text-5xl mb-8">Why the Pelican?</h2>
        <p class="text-lg text-slate-300 mb-8 leading-relaxed">
          A symbol of nurture, care, and strength in flight. It represents true love, and in the Ethiopian Orthodox Church we call it ጳልቃ (Paliqa). It is the embodiment of the sacrifice required to excel.
        </p>
        <a href="/about" class="px-8 py-3 bg-white text-[#020617] font-bold rounded-full border border-white/20 hover:bg-white hover:text-black transition-all duration-300 font-medium inline-flex items-center group">
          Read the Story <span class="ml-2 group-hover:translate-x-1 transition-transform">&rarr;</span>
        </a>
      </div>
      
      <div class="md:w-1/2 flex justify-center relative">
         <div class="absolute inset-0 bg-pelican-coral/20 blur-[80px] rounded-full animate-pulse"></div>
         <div class="w-80 h-80 relative z-10 drop-shadow-[0_0_15px_rgba(255,255,255,0.3)]">
            <PelicanIcon className="w-full h-full text-white" />
            </div>
      </div>
    </div>
  </section>

</BaseLayout>